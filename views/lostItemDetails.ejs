<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lost Item Details</title>
    <style>
        /* Additional styles for the lost item details page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            text-align: center;
            overflow: hidden;
        }

        .item-image {
            width: 100%;
            height: auto; /* Ensure aspect ratio is maintained */
            max-height: 300px; /* Adjust max-height as needed */
            object-fit: contain; /* Maintain aspect ratio and fit within container */
            border-radius: 10px 10px 0 0;
            margin-bottom: 20px;
        }

        .details {
            text-align: left;
            margin-bottom: 20px;
            padding: 0 20px;
        }

        .details p {
            margin: 10px 0;
            font-size: 18px;
        }

        .back-btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .back-btn:hover {
            background-color: #45a049;
        }

        /* Styles for change status dropdown */
        .change-status-container {
            margin-top: 20px;
            text-align: center;
        }

        #changeStatusSelect {
            padding: 8px;
            font-size: 16px;
            border-radius: 5px;
            margin-right: 10px;
        }

        #changeStatusBtn {
            background-color: #007bff;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        #changeStatusBtn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="margin-bottom: 10px;">Lost Item Details</h1>
        <img class="item-image" src="data:image/jpeg;base64,<%= lostItem.photo.toString('base64') %>" alt="Lost Item Photo">
        <div class="details">
            <p><strong>Name:</strong> <%= lostItem.itemName %></p>
            <p><strong>Place Lost:</strong> <%= lostItem.place %></p>
            <p><strong>User:</strong> <%= lostItem.user_id %></p>
            <p><strong>Date Lost:</strong> <%= lostItem.date.toDateString() %></p>
            <p><strong>Status:</strong> <%= lostItem.status %></p>
            <p><strong>Active/Inactive:</strong> <%= lostItem.reportedItems %></p>
            <!-- Add more details as needed -->
        </div>
        <a href="/lost" class="back-btn">Back to Lost Items</a>
        <a href="#" id="uploadedLink">Uploaded</a>
        <a href="#" id="verifiedLink">Verified</a>


    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var uploadedLink = document.getElementById("uploadedLink");
        
            uploadedLink.addEventListener("click", function(event) {
                event.preventDefault(); // Prevent default link behavior
        
                // Extract the lost item ID from the current URL
                var urlParts = window.location.pathname.split('/');
                var lostItemId = urlParts[urlParts.length - 1];
        
                // Perform POST request to update the status of the lost item
                fetch(`/lost/${lostItemId}/uploaded`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                        // Add any other headers if needed
                    },
                    body: JSON.stringify({
                        // Add any data you want to send in the POST request body
                    })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    // Handle successful response
                    console.log('POST request successful');
                    // Optionally, you can redirect the user to a different page or update the UI
                })
                .catch(error => {
                    // Handle error
                    console.error('There was a problem with the POST request:', error);
                });
            });
        });
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                var verifiedLink = document.getElementById("verifiedLink");
            
                verifiedLink.addEventListener("click", function(event) {
                    event.preventDefault(); // Prevent default link behavior
            
                    // Extract the lost item ID from the current URL
                    var urlParts = window.location.pathname.split('/');
                    var lostItemId = urlParts[urlParts.length - 1];
            
                    // Perform POST request to update the status of the lost item
                    fetch(`/lost/${lostItemId}/verified`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                            // Add any other headers if needed
                        },
                        body: JSON.stringify({
                            // Add any data you want to send in the POST request body
                        })
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        // Handle successful response
                        return response.json(); // Parse response JSON
                    })
                    .then(data => {
                        // Update the status directly in the DOM
                        var statusElement = document.getElementById("status");
                        statusElement.textContent = data.status; // Assuming the status is returned in the response
                    })
                    .catch(error => {
                        // Handle error
                        console.error('There was a problem with the POST request:', error);
                    });
                });
            });
            </script>
            
            


</body>
</html>
