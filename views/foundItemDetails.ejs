<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Found Item Details</title>
    <style>
        /* Additional styles for the lost item details page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            text-align: center;
            overflow: hidden;
        }

        .item-image {
    width: 100%;
    height: auto;
    max-height: 300px;
    object-fit: contain; /* Changed from 'cover' to 'contain' */
    border-radius: 10px 10px 0 0;
    margin-bottom: 20px;
}


        .details {
            text-align: left;
            margin-bottom: 20px;
            padding: 0 20px;
        }

        .details p {
            margin: 10px 0;
            font-size: 18px;
        }

        .back-btn, #uploadedLink, #verifiedLink {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-right: 10px;
        }

        .back-btn:hover, #uploadedLink:hover, #verifiedLink:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="margin-bottom: 10px;">Found Item Details</h1>
        <img class="item-image" src="data:image/jpeg;base64,<%= foundItem.photo.toString('base64') %>" alt="Found Item Photo">
        <div class="details">
            <p><strong>Name:</strong> <%= foundItem.itemName %></p>
            <p><strong>Place Found:</strong> <%= foundItem.place %></p>
            <p><strong>User:</strong> <%= foundItem.user_id %></p>
            <p><strong>Date Found:</strong> <%= foundItem.date.toDateString() %></p>
            <p><strong>Status:</strong> <%= foundItem.status %></p>
            <p><strong>Active/Inactive:</strong> <%= foundItem.reportedItems %></p>
            <!-- Add more details as needed -->
        </div>
        <a href="/found" class="back-btn">Back to Found Items</a>
        <a href="#" id="uploadedLink">Uploaded</a>
        <a href="#" id="verifiedLink">Verified</a>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var verifiedLink = document.getElementById("verifiedLink");
    
            verifiedLink.addEventListener("click", function(event) {
                event.preventDefault(); // Prevent default link behavior
    
                // Extract the found item ID from the current URL
                var urlParts = window.location.pathname.split('/');
                var foundItemId = urlParts[urlParts.length - 1];
    
                // Perform POST request to update the status of the found item
                fetch(`/found/${foundItemId}/verified`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                        // Add any other headers if needed
                    },
                    body: JSON.stringify({
                        // Add any data you want to send in the POST request body
                    })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    // Handle successful response
                    console.log('POST request successful');
                    // Optionally, you can redirect the user to a different page or update the UI
                })
                .catch(error => {
                    // Handle error
                    console.error('There was a problem with the POST request:', error);
                });
            });
        });
    </script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var uploadedLink = document.getElementById("uploadedLink");

        uploadedLink.addEventListener("click", function(event) {
            event.preventDefault(); // Prevent default link behavior

            // Extract the found item ID from the current URL
            var urlParts = window.location.pathname.split('/');
            var foundItemId = urlParts[urlParts.length - 1];

            // Perform POST request to update the status of the found item
            fetch(`/found/${foundItemId}/uploaded`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                    // Add any other headers if needed
                },
                body: JSON.stringify({
                    // Add any data you want to send in the POST request body
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                // Handle successful response
                console.log('POST request successful');
                // Optionally, you can redirect the user to a different page or update the UI
            })
            .catch(error => {
                // Handle error
                console.error('There was a problem with the POST request:', error);
            });
        });
    });
</script>

</body>
</html>
