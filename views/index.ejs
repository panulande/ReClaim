<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lost Items</title>
    <style>
        /* styles.css */
.grid-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    height: 600px;
}

.item-box {
    border: 1px solid #ddd;
    padding: 10px;
    background-color: #fff;
    text-align: center;
    width: 200px; /* Adjust the width of the box */
    height: 200px; /* Adjust the height of the box */
}

.image-container {
    width: 100%;
    height: 60%;
    overflow: hidden;
}

.item-image {
    width: auto; /* Adjust the width of the image */
    height: 100%;
    display: block;
    margin: 0 auto; /* Center the image horizontally */
}

.details-container {
    font-size: 14px;
}

.pagination {
    margin-top: 20px;
    text-align: center;
}

.pagination a {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 5px;
    text-decoration: none;
    color: #333;
    border: 1px solid #ddd;
}

.pagination a.active {
    background-color: #333;
    color: #fff;
}

    </style>
</head>
<body>
    <div class="grid-container">
        <% lostItems.forEach(item => { %>
            <div class="item-box">
                <div class="image-container">
                    <img class="item-image" src="data:image/jpeg;base64,<%= item.photo.toString('base64') %>" alt="Lost Item Photo">
                </div>
                <div class="details-container">
                    <p><strong>Name:</strong> <%= item.itemName %></p>
                    <p><strong>Place Lost:</strong> <%= item.place %></p>
                    <p><strong>Date Lost:</strong> <%= item.date.toDateString() %></p>
                </div>
            </div>
        <% }); %>
    </div>
    <div class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/lost?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>
    </div>
</body>
</html>
