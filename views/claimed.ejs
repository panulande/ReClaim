<!-- claimed.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claimed Items</title>
    <link rel="stylesheet" href="searchResults.css">
</head>
<body>
    <header>
        <!-- Header content here -->
    </header>
    <div class="search-container">
        <!-- Search form here -->
    </div>

    <!-- Grid layout for displaying claimed items -->
    <div class="grid-container">
        <% items.forEach(item => { %>
            <a href="/claimed/<%= item.item._id %>" class="item-link">
                <div class="item-box">
                    <div class="image-container">
                        <img class="item-image" src="data:image/jpeg;base64,<%= item.item.photo.toString('base64') %>" alt="Found Item Photo">
                    </div>
                    <div class="details-container">
                        <p><strong>Name:</strong> <%= item.item.itemName %></p>
                        <p><strong>Date Found:</strong> <%= item.item.date %></p>
                        <p><strong>Place Found:</strong> <%= item.item.place %></p>
                        <p><strong>Description:</strong> <%= item.item.description %></p>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>

    <!-- Pagination links -->
    <div class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/claimed?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>
    </div>

    <script>
        // JavaScript code here if needed
    </script>
</body>
</html>
