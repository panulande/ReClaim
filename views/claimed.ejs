<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claimed Items</title>
    <link rel="stylesheet" href="login.css">
    <style>
        /* styles.css */
        .grid-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            height: 600px;
            width: 80%;
            position: relative;
            left: 10%;
            padding-top: 80px;    
        }

        .item-box {
            border: 1px solid #ddd;
            padding: 10px;
            background-color: #f9f9f9; /* Light gray background color */
            text-align: center;
            width: 200px;
            height: 250px;
            transition: transform 0.3s ease;
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
            z-index: -1;
            background-color: black;
        }

        .image-container {
            width: 100%;
            height: 60%;
            overflow: hidden;
            padding-bottom: 40px;
        }

        .item-image {
            width: auto; /* Adjust the width of the image */
            height: 100%;
            display: block;
            margin: 0 auto; /* Center the image horizontally */
        }

        .details-container {
            font-size: 14px;
        }

        .pagination {
            margin-top: 20px;
            text-align: center;
        }

        .pagination a {
            display: inline-block;
            padding: 5px 10px;
            margin-right: 5px;
            text-decoration: none;
            color: #333;
            border: 1px solid #ddd;
        }

        .pagination a.active {
            background-color: #333;
            color: #fff;
        }

        .item-link {
            padding: 10px;
            text-align: center;
            width: 200px;
            height: 250px;
            transition: transform 0.3s ease;
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
            z-index: 1;
        }
    </style>
</head>
<body>
    <header>
        <!-- Header content here -->
    </header>
    <div class="search-container">
        <!-- Search form here -->
    </div>

    <!-- Grid layout for displaying claimed items -->
    <div class="grid-container">
        <% items.forEach(item => { %>
            <a href="/claimed/<%= item.item._id %>" class="item-link">
                <div class="item-box">
                    <div class="image-container">
                        <img class="item-image" src="data:image/jpeg;base64,<%= item.item.photo.toString('base64') %>" alt="Found Item Photo">
                    </div>
                    <div class="details-container">
                        <p><strong>Name:</strong> <%= item.item.itemName %></p>
                        <p><strong>Date Found:</strong> <%= item.item.date %></p>
                        <p><strong>Place Found:</strong> <%= item.item.place %></p>
                        <p><strong>Description:</strong> <%= item.item.description %></p>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>

    <!-- Pagination links -->
    <div class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/claimed?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>
    </div>

    <script>
        // JavaScript code here if needed
    </script>
</body>
</html>
